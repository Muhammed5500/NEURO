{
  "name": "@neuro/shared",
  "version": "1.0.0",
  "private": true,
  "description": "Shared utilities, schemas, and security policies for NEURO",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas/index.mjs",
      "require": "./dist/schemas/index.js",
      "types": "./dist/schemas/index.d.ts"
    },
    "./security": {
      "import": "./dist/security/index.mjs",
      "require": "./dist/security/index.js",
      "types": "./dist/security/index.d.ts"
    },
    "./logger": {
      "import": "./dist/logger/index.mjs",
      "require": "./dist/logger/index.js",
      "types": "./dist/logger/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants/index.mjs",
      "require": "./dist/constants/index.js",
      "types": "./dist/constants/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "zod": "^3.24.0",
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
