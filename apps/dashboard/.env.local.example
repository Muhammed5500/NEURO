# ============================================
# NEURO DASHBOARD - REQUIRED ENVIRONMENT VARIABLES
# ============================================
# IMPORTANT: All connections are LIVE - no mock fallbacks
# If these are not configured, the dashboard will show errors

# ============================================
# ORCHESTRATOR BACKEND
# ============================================
# Required: Base URL for the orchestrator service
NEXT_PUBLIC_ORCHESTRATOR_URL=http://localhost:4000

# ============================================
# MONAD CHAIN CONNECTION
# ============================================
# Required: Monad RPC endpoint (Chain ID 143)
NEXT_PUBLIC_MONAD_RPC_URL=https://rpc.monad.xyz

# ============================================
# SOCIAL BOT API
# ============================================
# Required for social metrics: URL to social bot service
NEXT_PUBLIC_SOCIAL_BOT_API_URL=http://localhost:5000

# ============================================
# X (TWITTER) API
# ============================================
# Enable X API integration
NEXT_PUBLIC_X_API_ENABLED=true

# ============================================
# NEWS RSS FEEDS
# ============================================
# Comma-separated list of RSS feed URLs
NEXT_PUBLIC_NEWS_RSS_FEEDS=https://cointelegraph.com/rss,https://decrypt.co/feed

# ============================================
# OPERATIONAL MODES
# ============================================
# Demo mode: Full simulation (no real transactions)
NEXT_PUBLIC_DEMO_MODE=false

# Readonly mode: Only reads, no writes
NEXT_PUBLIC_MAINNET_READONLY=true

# Manual approval: Require approval for all operations
NEXT_PUBLIC_MANUAL_APPROVAL=true

# Kill switch: Emergency stop
NEXT_PUBLIC_KILL_SWITCH_ACTIVE=false

# Network
NEXT_PUBLIC_NETWORK=mainnet

# ============================================
# ERROR BEHAVIOR
# ============================================
# If backend is unavailable:
# - Dashboard shows DISCONNECTED state
# - No fallback to mock data
# - Raw errors displayed in UI for debugging
# ============================================
